[user]
	email = robertj@opera.com
	name  = Robert Jacobsen
[core]
	editor = vim
[color]
	ui = auto
[alias]
	co = checkout
	ci = commit
	st = status
	sm = submodule
	br = branch -vv
	hist = log --pretty=format:\"%C(yellow)%h %Cgreen%ad %Creset%s%C(yellow)%d %Creset[%C(cyan)%an%Creset]\" --graph --date=short
	ff = merge --ff-only @{u}
	track = !git branch --set-upstream $(git for-each-ref --format=\"%(refname:short)\" $(git symbolic-ref HEAD))
[push]
	default = tracking
[apply]
	whitespace = fix
[branch]
	autosetuprebase = remote
